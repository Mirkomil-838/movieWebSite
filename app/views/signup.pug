doctype 5
html
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1,, user-scalable=no")
		title 注册账号
		include ./includes/header
		link(href="../../css/sign.css",rel="stylesheet")
	body
		canvas#canvas(style="position:fixed;bottom:0;left:0;") 你的浏览器不支持canvas
		.navbar.navbar-inverse.navbar-fixed-top
			.navbar-header
				button.btn-btn-default.navbar-toggle(type="button", data-toggle="collapse", data-target="#web-navbar")
					span.sr-only
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand: span.glyphicon.glyphicon-cloud
			.collapse.navbar-collapse#web-navbar
				ul.nav.navbar-nav
					li.active: a(href="/") 首页
					li: a(href="/movies") 电影
					li: a(href="/blog") 主人的博客
					li.dropdown
						a.dropdown-toggle(data-toggle="dropdown", href="javasript:;") 来点休闲吧~
							span.caret
						ul.dropdown-menu
							li.dropdown-header Games
							li.disabled: a 2048
							li.divider
							li.dropdown-header 来点特效吧
							li: a(href="/css3") 翻滚吧
							li.divider
							li.dropdown-header 手机专享
							li.disabled: a 饿了么外卖
				form.navbar-form.navbar-left
					.form-group
						input.form-control(type="search", placeholder="请输入您想搜索的内容")
						button.btn.btn-default 搜索
				ul.nav.navbar-nav.navbar-right
					li: a(href="/signin") 登陆
					li.navbar-text &nbsp;&nbsp;&nbsp;
		.background
		.modal.show.sign
			.modal-dialog
				.modal-content
					form.form-horizontal#form-signup(method="POST", action="/signup")
						.modal-header
							h4.modal-title 注册
						.modal-body
							if msg
								.form-group.has-error.has-feedback#form-username
									label.control-label.col-sm-2 用户名
									.col-sm-9
										input.form-control(type="text", name="user[nickname]", placeholder="请输入用户名")
										span.glyphicon.glyphicon-remove.form-control-feedback
										span.help-block#form-user-help #{ msg }
							else 
								.form-group.has-feedback#form-username
									label.control-label.col-sm-2 用户名
									.col-sm-9
										input.form-control(type="text", name="user[nickname]", placeholder="请输入用户名")

							.form-group.has-feedback#form-password
								label.control-label.col-sm-2 密码
								.col-sm-9
									input.form-control(type="password", name="user[password]",placeholder="请输入密码")
						.modal-footer
							span 已有账号,
							a.btn.btn-link(href="/signin") 登陆
							button.btn.btn-primary(type="submit", style="margin-right:8%;") 注册 
		script(src="../js/signup.js")